<?xml version="1.0" encoding="UTF-8"?>
{% block content %}
    {% if users is defined %}
        <list-users>
            {% for user in users %}
                <user>
                    <id>{{ user.id }}</id>
                    <name>{{ user.name }}</name>
                    <email>{{ user.email }}</email>
                    <password>{{ user.password }}</password>
                    <admin>{{ user.admin }}</admin>
                    <created-at>{{ user.createdAt }}</created-at>
                    <status>{{ user.status == 1 ? 'Active' : 'Inactive' }}</status>
                </user>
            {% endfor %}
        </list-users>
    {% endif %}
{% endblock %}
